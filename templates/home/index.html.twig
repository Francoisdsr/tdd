{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <form action="/convert">
        <label for="nombre">Insérer votre nombre a convertir</label>
        <input type="text" name="nombre" id="nombre"><br>

        <label for="base_dep">Base de départ</label>
        <select name="base_dep">
            {% for i in 0..16 %}
                <option value="{{i}}">{{i}}</option>
            {% endfor %}
        </select><br>

        <label for="base_arr">Base d'arriver</label>
        <select name="base_arr">
            {% for i in 0..16 %}
                <option value="{{i}}">{{i}}</option>
            {% endfor %}
        </select><br>

        <input type="submit" value="Convertir">
    </form>
</div>
{% endblock %}